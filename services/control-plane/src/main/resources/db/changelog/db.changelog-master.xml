<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="001-create-schema" author="nexusweaver">
        <sql>CREATE SCHEMA IF NOT EXISTS nexusweaver;</sql>
    </changeSet>

    <changeSet id="002-create-applications-table" author="nexusweaver">
        <createTable tableName="applications" schemaName="nexusweaver">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="UUID"/>
            <column name="description" type="TEXT"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <createIndex tableName="applications" indexName="idx_applications_name" schemaName="nexusweaver">
            <column name="name"/>
        </createIndex>
    </changeSet>

    <changeSet id="003-add-application-description" author="nexusweaver">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="applications" columnName="description" schemaName="nexusweaver"/>
            </not>
        </preConditions>
        
        <addColumn tableName="applications" schemaName="nexusweaver">
            <column name="description" type="text">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        
        <comment>Add description column to applications table</comment>
    </changeSet>

    <changeSet id="003-create-deployments-table" author="nexusweaver">
        <createTable tableName="deployments" schemaName="nexusweaver">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="application_id" type="UUID">
                <constraints nullable="false" 
                           foreignKeyName="fk_deployments_application"
                           references="nexusweaver.applications(id)"/>
            </column>
            <column name="version" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="manifest" type="TEXT"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <createIndex tableName="deployments" indexName="idx_deployments_application_id" schemaName="nexusweaver">
            <column name="application_id"/>
        </createIndex>
        
        <createIndex tableName="deployments" indexName="idx_deployments_status" schemaName="nexusweaver">
            <column name="status"/>
        </createIndex>
    </changeSet>

    <changeSet id="004-create-services-table" author="nexusweaver">
        <createTable tableName="services" schemaName="nexusweaver">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="deployment_id" type="UUID">
                <constraints nullable="false" 
                           foreignKeyName="fk_services_deployment"
                           references="nexusweaver.deployments(id)"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="process_id" type="VARCHAR(255)">
                <constraints unique="true"/>
            </column>
            <column name="node_id" type="VARCHAR(255)"/>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="language" type="VARCHAR(50)"/>
            <column name="port" type="INTEGER"/>
            <column name="command" type="TEXT"/>
            <column name="memory_limit" type="BIGINT"/>
            <column name="cpu_shares" type="INTEGER"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <createIndex tableName="services" indexName="idx_services_deployment_id" schemaName="nexusweaver">
            <column name="deployment_id"/>
        </createIndex>
        
        <createIndex tableName="services" indexName="idx_services_status" schemaName="nexusweaver">
            <column name="status"/>
        </createIndex>
        
        <createIndex tableName="services" indexName="idx_services_node_id" schemaName="nexusweaver">
            <column name="node_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>